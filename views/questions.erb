<div class="zero-dimensions z-index-5">
    <div class="full-dimensions">
        <div class="blocker"></div>
    </div>
</div>
<div class="h1-portlet z-index-5">
    <h1>Questions</h1>
</div>
<div class="questions-container z-index-5">
    <% @questions.each do |question|%>
        <div class="portlet-variant2 side-margin-1em">
            <div class = "question full-width margin-0">
                <div class="">
                    <% if @questions.distinct.pluck(:teacher_id).length > 1 && question.teacher%>
                        <h2 class="">Teacher: <%= question.teacher.first_name%></h2>
                    <% end %>
                </div>
            </div>
            <div class = "margin-top student-update-form-row">
                <div class="label-input-pair">
                    <p>Question: "<%= question.body%>"&nbsp;&nbsp;&nbsp;</p>
                </div>
                <div class="label-input-pair">
                    <p>Type: <%= question.assessment_type%></p>
                </div>
            </div>
            <div class = "student-update-form-row">
                <div class="label-input-pair">
                    <p>Answer: <%= question.answer_key%></p>
                </div>
            </div>
            <button class="edit-question"><a href="/questions/<%= question.id%>"><p>Edit Question</p></a></button>
        </div>
    <% end %>
</div>