<div class="zero-dimensions z-index-5">
    <div class="full-dimensions">
        <div class="blocker"></div>
    </div>
</div>
<div class="h1-portlet z-index-5">
    <h1><%=@student.first_name%>'s Answer History</h1>
</div>
<div class="questions-container">
<% @student_answers.each do |answer|%>
    <div class="student_answer_container">
    <div class="question-and-logo">
        <h2 class = "sa-question <%=answer.outcome%>-highlight">Question: <%=answer.latin_question.body%></h2><span class="check-or-cross"><%if answer.outcome == 'Correct'%><i class="far fa-check-circle"></i><%elsif answer.outcome == 'Incorrect'%><i class="far fa-times-circle"></i><%else%><i class="far fa-question-circle"></i><%end%></span> 
    </div>
        <div class="student_answer_flex">
            <span>Given Answer: <%=answer.answer%></span>
            <span>Answer Key: <%=answer.latin_question.answer_key%></span>
        </div>
        <div class="student_answer_flex">
            <span>Outcome: <%=answer.outcome%></span>
            <span>Date: <%=answer.created_at.day%>/<%=answer.created_at.month%>/<%=answer.created_at.year%></span>
            </span>
        </div>
        <div class="review">
            <% if answer.reviewed == true%>
            <span class="reviewed">Reviewed</span>
            <% else %>
            <span>Awaiting Review</span>
            <% end %>
        </div>
    </div>
<% end %>
</div>